{% extends "_layout" %}

{% block content %}
    <div class="settings-page">
        <h1>Settings</h1>
        
        <div class="settings-navigation">
            <ul class="nav-tabs">
                <li class="nav-item"><a href="#staff-management" class="nav-link active" data-bs-toggle="tab">Staff Management</a></li>
                <li class="nav-item"><a href="#buildings-departments" class="nav-link" data-bs-toggle="tab">Buildings & Departments</a></li>
                <li class="nav-item"><a href="#task-types" class="nav-link" data-bs-toggle="tab">Task Types</a></li>
            </ul>
        </div>
        
        <div class="tab-content">
            <!-- Staff Management Tab -->
            <div class="tab-pane active" id="staff-management">
                <div class="settings-section">
                    <div class="section-cards">
                        <div class="settings-card">
                            <h2>Porters</h2>
                            <p>Manage porter staff members with their first names and surnames.</p>
                            <div class="card-count">
                                {% set porterCount = craft.entries()
                                    .section('porters')
                                    .count() %}
                                <strong>{{ porterCount }}</strong> porter{{ porterCount != 1 ? 's' : '' }} in the system
                            </div>
                            <div class="card-actions">
                                <a href="{{ siteUrl('porters') }}" class="btn">Manage Porters</a>
                            </div>
                        </div>
                        
                        <div class="settings-card">
                            <h2>Supervisors</h2>
                            <p>Manage supervisor staff members with their first names and surnames.</p>
                            <div class="card-count">
                                {% set supervisorCount = craft.entries()
                                    .section('supervisors')
                                    .count() %}
                                <strong>{{ supervisorCount }}</strong> supervisor{{ supervisorCount != 1 ? 's' : '' }} in the system
                            </div>
                            <div class="card-actions">
                                <a href="{{ siteUrl('supervisors') }}" class="btn">Manage Supervisors</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Buildings & Departments Tab -->
            <div class="tab-pane" id="buildings-departments">
                <div class="settings-section">
                    <div class="section-cards">
                        <div class="settings-card">
                            <h2>Buildings</h2>
                            <p>Manage buildings where porters and supervisors work.</p>
                            <div class="card-count">
                                {% set buildingCount = craft.entries()
                                    .section('buildings')
                                    .count() %}
                                <strong>{{ buildingCount }}</strong> building{{ buildingCount != 1 ? 's' : '' }} in the system
                            </div>
                            <div class="card-actions">
                                <a href="{{ siteUrl('buildings') }}" class="btn">Manage Buildings</a>
                            </div>
                        </div>
                        
                        <div class="settings-card">
                            <h2>Departments</h2>
                            <p>Manage departments within buildings.</p>
                            <div class="card-count">
                                {% set departmentCount = craft.entries()
                                    .section('departments')
                                    .count() %}
                                <strong>{{ departmentCount }}</strong> department{{ departmentCount != 1 ? 's' : '' }} in the system
                            </div>
                            <div class="card-actions">
                                <a href="{{ siteUrl('departments') }}" class="btn">Manage Departments</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Task Types Tab -->
            <div class="tab-pane" id="task-types">
                <div class="settings-section">
                    <div class="section-notice">
                        <p>This section will allow you to create different types of tasks that can be assigned to porters.</p>
                        <p>Task Types are not implemented in the current version.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <style>
        .settings-page h1 {
            margin-bottom: 30px;
        }
        
        .settings-navigation {
            margin-bottom: 30px;
        }
        
        .nav-tabs {
            display: flex;
            list-style: none;
            padding: 0;
            margin: 0;
            border-bottom: 1px solid #dee2e6;
        }
        
        .nav-item {
            margin-bottom: -1px;
        }
        
        .nav-link {
            display: block;
            padding: 10px 15px;
            margin-right: 2px;
            border: 1px solid transparent;
            border-top-left-radius: 4px;
            border-top-right-radius: 4px;
            text-decoration: none;
        }
        
        .nav-link.active {
            background-color: #fff;
            border-color: #dee2e6 #dee2e6 #fff;
            color: #0d6efd;
        }
        
        .tab-content {
            padding: 20px 0;
        }
        
        .tab-pane {
            display: none;
        }
        
        .tab-pane.active {
            display: block;
        }
        
        .section-cards {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        
        .settings-card {
            flex: 1;
            min-width: 300px;
            background-color: #f9f9f9;
            border: 1px solid #eee;
            border-radius: 5px;
            padding: 20px;
        }
        
        .settings-card h2 {
            margin-top: 0;
            color: #0d6efd;
        }
        
        .card-count {
            margin: 15px 0;
            font-size: 0.9em;
            color: #666;
        }
        
        .card-actions {
            margin-top: 20px;
        }
        
        .section-notice {
            background-color: #f8f9fa;
            border-left: 4px solid #0d6efd;
            padding: 15px;
            margin: 20px 0;
        }
    </style>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Simple tab navigation
            const tabs = document.querySelectorAll('.nav-link');
            
            tabs.forEach(tab => {
                tab.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Hide all tab panes
                    document.querySelectorAll('.tab-pane').forEach(pane => {
                        pane.classList.remove('active');
                    });
                    
                    // Deactivate all tabs
                    tabs.forEach(t => {
                        t.classList.remove('active');
                    });
                    
                    // Activate clicked tab
                    this.classList.add('active');
                    
                    // Show corresponding pane
                    const target = this.getAttribute('href');
                    document.querySelector(target).classList.add('active');
                });
            });
        });
    </script>
{% endblock %}
