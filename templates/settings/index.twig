    <script src="https://unpkg.com/vue@3.2.31/dist/vue.global.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Simple tab navigation
            const tabs = document.querySelectorAll('.nav-link');
            
            tabs.forEach(tab => {
                tab.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Hide all tab panes
                    document.querySelectorAll('.tab-pane').forEach(pane => {
                        pane.classList.remove('active');
                    });
                    
                    // Deactivate all tabs
                    tabs.forEach(t => {
                        t.classList.remove('active');
                    });
                    
                    // Activate clicked tab
                    this.classList.add('active');
                    
                    // Show corresponding pane
                    const target = this.getAttribute('href');
                    document.querySelector(target).classList.add('active');
                });
            });
            
            // Initialize Vue apps
            const { createApp } = Vue;
            
            // Task Categories App
            const categoriesApp = createApp({
                data() {
                    return {
                        categoryName: '',
                        activeCategoryId: null,
                        subcategoryName: '',
                    }
                },
                methods: {
                    submitCategoryForm(e) {
                        // Validate the form
                        if (!this.categoryName.trim()) {
                            alert('Please enter a category name');
                            e.preventDefault();
                            return;
                        }
                        
                        // Form will continue with normal submission
                    },
                    showAddSubcategoryForm(categoryId) {
                        // If clicking the same category, toggle the form
                        if (this.activeCategoryId === categoryId) {
                            this.activeCategoryId = null;
                        } else {
                            this.activeCategoryId = categoryId;
                            this.subcategoryName = '';
                        }
                    },
                    cancelAddSubcategory() {
                        this.activeCategoryId = null;
                        this.subcategoryName = '';
                    },
                    submitSubcategoryForm(e, categoryId) {
                        // Validate the form
                        if (!this.subcategoryName.trim()) {
                            alert('Please enter a subcategory name');
                            return;
                        }
                        
                        // Get form data
                        const formData = new FormData(e.target);
                        
                        // Submit the form via AJAX
                        fetch('', {
                            method: 'POST',
                            body: formData,
                        })
                        .then(response => response.text())
                        .then(html => {
                            // Show success notification
                            const notification = document.createElement('div');
                            notification.className = 'notification success';
                            notification.innerHTML = 'Subcategory has been added successfully!';
                            
                            // Insert notification near the form
                            const formParent = e.target.closest('.inline-subcategory-form');
                            formParent.prepend(notification);
                            
                            // Refresh the categories list for this category
                            this.refreshSubcategoriesList(categoryId);
                            
                            // Clear form and hide after a delay
                            setTimeout(() => {
                                this.subcategoryName = '';
                                notification.remove();
                                
                                // Refresh the page content without a full reload
                                this.activeCategoryId = null;
                            }, 2000);
                        })
                        .catch(error => {
                            console.error('Error submitting form:', error);
                            alert('There was an error adding the subcategory. Please try again.');
                        });
                    },
                    refreshSubcategoriesList(categoryId) {
                        // This function would ideally make an AJAX request to get updated subcategories
                        // But for simplicity, we'll just force a focused reload
                        const tempId = this.activeCategoryId;
                        this.activeCategoryId = null;
                        
                        setTimeout(() => {
                            this.activeCategoryId = tempId;
                        }, 100);
                    }
                }
            });
            
            // Mount the categories app if the container exists
            const categoriesAppContainer = document.getElementById('task-categories-app');
            if (categoriesAppContainer) {
                categoriesApp.mount('#task-categories-app');
            }
            
            // Location Management App
            const locationsApp = createApp({
                data() {
                    return {
                        activeBuildingId: null,
                        departmentName: '',
                    }
                },
                methods: {
                    showAddDepartmentForm(buildingId) {
                        // If clicking the same building, toggle the form
                        if (this.activeBuildingId === buildingId) {
                            this.activeBuildingId = null;
                        } else {
                            this.activeBuildingId = buildingId;
                            this.departmentName = '';
                        }
                    },
                    cancelAddDepartment() {
                        this.activeBuildingId = null;
                        this.departmentName = '';
                    },
                    submitDepartmentForm(e, buildingId) {
                        // Validate the form
                        if (!this.departmentName.trim()) {
                            alert('Please enter a department name');
                            return;
                        }
                        
                        // Get form data
                        const formData = new FormData(e.target);
                        
                        // Submit the form via AJAX
                        fetch('', {
                            method: 'POST',
                            body: formData,
                        })
                        .then(response => response.text())
                        .then(html => {
                            // Show success notification
                            const notification = document.createElement('div');
                            notification.className = 'notification success';
                            notification.innerHTML = 'Department has been added successfully!';
                            
                            // Insert notification near the form
                            const formParent = e.target.closest('.inline-department-form');
                            formParent.prepend(notification);
                            
                            // Refresh the departments list for this building
                            this.refreshDepartmentsList(buildingId);
                            
                            // Clear form and hide after a delay
                            setTimeout(() => {
                                this.departmentName = '';
                                notification.remove();
                                
                                // Refresh the page content without a full reload
                                this.activeBuildingId = null;
                            }, 2000);
                        })
                        .catch(error => {
                            console.error('Error submitting form:', error);
                            alert('There was an error adding the department. Please try again.');
                        });
                    },
                    
                    refreshDepartmentsList(buildingId) {
                        // This function would ideally make an AJAX request to get updated departments
                        // But for simplicity in this implementation, we'll just force a focused reload
                        // of just that section by toggling the form visibility, which will re-trigger
                        // the template's childLocations query when the form is shown again
                        const tempId = this.activeBuildingId;
                        this.activeBuildingId = null;
                        
                        setTimeout(() => {
                            this.activeBuildingId = tempId;
                        }, 100);
                    }
                }
            });
            
            // Mount the Vue app if the container exists
            const locationsAppContainer = document.getElementById('locations-app');
            if (locationsAppContainer) {
                locationsApp.mount('#locations-app');
            }
        });
    </script>
