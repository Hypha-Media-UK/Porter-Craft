        .settings-header h1 {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.5rem;
        }
        
        .settings-description {
            color: var(--text-light);
            font-size: 1.1rem;
            margin-top: 0.5rem;
        }
        
        /* Tab Navigation */
        .settings-navigation {
            margin-bottom: 2rem;
        }
        
        .tab-navigation {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            padding: 0.5rem;
            background-color: var(--light);
            border-radius: var(--radius);
            border: 1px solid var(--border);
        }
        
