    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Simple tab navigation
            const tabs = document.querySelectorAll('.nav-link');
            
            tabs.forEach(tab => {
                tab.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Hide all tab panes
                    document.querySelectorAll('.tab-pane').forEach(pane => {
                        pane.classList.remove('active');
                    });
                    
                    // Deactivate all tabs
                    tabs.forEach(t => {
                        t.classList.remove('active');
                    });
                    
                    // Activate clicked tab
                    this.classList.add('active');
                    
                    // Show corresponding pane
                    const target = this.getAttribute('href');
                    document.querySelector(target).classList.add('active');
                });
            });
            
            // Department form handling
            const addDepartmentButtons = document.querySelectorAll('.add-department');
            const departmentForm = document.getElementById('add-department-form');
            const parentIdField = document.getElementById('parent-id-field');
            const cancelButton = document.getElementById('cancel-department');
            
            addDepartmentButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Get the parent ID from the button's data attribute
                    const parentId = this.getAttribute('data-parent-id');
                    
                    // Set the parentId field value
                    parentIdField.value = parentId;
                    
                    // Show the department form
                    departmentForm.style.display = 'block';
                    
                    // Scroll to the form
                    departmentForm.scrollIntoView({ behavior: 'smooth' });
                });
            });
            
            // Cancel button click handler
            if (cancelButton) {
                cancelButton.addEventListener('click', function() {
                    // Hide the form
                    departmentForm.style.display = 'none';
                    
                    // Clear the form fields
                    document.getElementById('department-title').value = '';
                    parentIdField.value = '';
                });
            }
            
            // AJAX form submission
            document.querySelectorAll('.ajax-form').forEach(form => {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    const formData = new FormData(this);
                    const entryType = this.getAttribute('data-entry-type');
                    
                    // Log form data for debugging
                    if (entryType === 'department') {
                        console.log('Submitting department with parent ID:', formData.get('parentId'));
                    }
                    
                    // Get the form action URL - default to current URL if none is specified
                    const form = this;
                    
                    // Show loading indicator
                    const submitBtn = form.querySelector('button[type="submit"]');
                    const originalBtnText = submitBtn.textContent;
                    submitBtn.textContent = 'Saving...';
                    submitBtn.disabled = true;
                    
                    // Submit the form using XMLHttpRequest instead of fetch
                    // This handles redirects better in the Craft CMS context
                    const xhr = new XMLHttpRequest();
                    xhr.open('POST', '');
                    xhr.setRequestHeader('X-Requested-With', 'XMLHttpRequest');
                    xhr.setRequestHeader('Accept', 'application/json');
                    
                    xhr.onload = function() {
                        // Re-enable button
                        submitBtn.textContent = originalBtnText;
                        submitBtn.disabled = false;
                        
                        // Check if the request was successful (status code 200-299)
                        if (xhr.status >= 200 && xhr.status < 300) {
                            // Success - entry was created
                            
                            // Show success message
                            const successDiv = document.createElement('div');
                            successDiv.className = 'notification success';
                            successDiv.innerHTML = `<p>${entryType.charAt(0).toUpperCase() + entryType.slice(1)} has been saved successfully!</p>`;
                            
                            // Insert success message before the form
                            form.parentNode.insertBefore(successDiv, form);
                            
                            // Clear form fields
                            form.reset();
                            
                            // Refresh the appropriate list based on entry type
                            refreshEntryList(entryType);
                            
                            // Remove success message after 5 seconds
                            setTimeout(() => {
                                successDiv.remove();
                            }, 5000);
                        } else {
                            // Error occurred
                            console.error('Form submission error:', xhr.statusText);
                            alert('There was a problem with your submission. Please try again.');
                        }
                    };
                    
                    xhr.onerror = function() {
                        // Re-enable button
                        submitBtn.textContent = originalBtnText;
                        submitBtn.disabled = false;
                        
                        console.error('Request failed');
                        alert('There was a problem with your submission. Please try again.');
                    };
                    
                    xhr.send(formData);
                });
            });
            
            // Function to refresh entry lists after successful submission
            function refreshEntryList(entryType) {
                let listSelector = '';
                
                switch(entryType) {
                    case 'supervisor':
                        listSelector = '.supervisors-list';
                        break;
                    case 'porter':
                        listSelector = '.porters-list';
                        break;
                    case 'building':
                        listSelector = '.buildings-list';
                        break;
                    case 'department':
                        // We'll need to refresh the entire buildings list since departments are nested
                        listSelector = '.buildings-list';
                        break;
                }
                
                if (listSelector) {
                    // Fetch the updated list HTML
                    fetch(window.location.href)
                        .then(response => response.text())
                        .then(html => {
                            const parser = new DOMParser();
                            const doc = parser.parseFromString(html, 'text/html');
                            
                            // Get the updated list content
                            const newListContent = doc.querySelector(listSelector).innerHTML;
                            
                            // Update the list in the current page
                            document.querySelector(listSelector).innerHTML = newListContent;
                            
                            // Reattach event listeners for department buttons if necessary
                            if (entryType === 'building' || entryType === 'department') {
                                reattachDepartmentButtonListeners();
                            }
                        })
                        .catch(error => {
                            console.error('Error refreshing list:', error);
                        });
                }
            }
            
            // Function to reattach event listeners after DOM updates
            function reattachDepartmentButtonListeners() {
                document.querySelectorAll('.add-department').forEach(button => {
                    button.addEventListener('click', function(e) {
                        e.preventDefault();
                        const parentId = this.getAttribute('data-parent-id');
                        parentIdField.value = parentId;
                        departmentForm.style.display = 'block';
                        departmentForm.scrollIntoView({ behavior: 'smooth' });
                    });
                });
            }
        });
    </script>
