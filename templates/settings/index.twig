        .tab-button:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }
        
        .tab-button.active {
            background-color: var(--primary);
            color: white;
        }
        
        /* Tab Content */
        .tab-content {
            padding: 0;
        }
        
        .tab-pane {
            display: none;
            animation: fadeIn 0.3s ease-in-out;
        }
        
        .tab-pane.active {
            display: block;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        /* Locations Tree Styles */
        .locations-tree {
            margin-top: 1.5rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
        
        .location-item {
            margin-bottom: 0.75rem;
            border-radius: var(--radius);
