{% extends "_layout" %}

{% block content %}
    <div class="header-with-nav">
        <h1>Departments Management</h1>
        <div class="nav-links">
            <a href="{{ siteUrl('settings') }}" class="btn">‚Üê Back to Settings</a>
        </div>
    </div>

    {# Display existing departments #}
    <div class="departments-list">
        <h2>Existing Departments</h2>
        {% set departments = craft.entries()
            .section('departments')
            .orderBy('title asc')
            .all() %}

        {% if departments|length %}
            <table class="departments-table">
                <thead>
                    <tr>
                        <th>Department Name</th>
                        <th>Building</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for department in departments %}
                        {% set relatedBuilding = craft.entries()
                            .section('buildings')
                            .relatedTo(department)
                            .one() %}
                        <tr>
                            <td><a href="{{ department.url }}">{{ department.title }}</a></td>
                            <td>
                                {% if relatedBuilding %}
                                    <a href="{{ relatedBuilding.url }}">{{ relatedBuilding.title }}</a>
                                {% else %}
                                    <em>None assigned</em>
                                {% endif %}
                            </td>
                            <td class="actions-column">
                                <a href="{{ department.cpEditUrl }}" class="btn small">Edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p><em>No departments have been added yet.</em></p>
        {% endif %}
    </div>

    {# Form to add new department #}
    <div class="add-department-form">
        <h2>Add New Department</h2>
        
        {% if success is defined %}
            <div class="notification success">
                Department has been saved successfully!
            </div>
        {% endif %}

        {% set entry = entry is defined ? entry : craft.entries.section('departments').one() ?? create('craft\\elements\\Entry') %}
        
        <form method="post" accept-charset="UTF-8">
            {{ csrfInput() }}
            {{ actionInput('entries/save-entry') }}
            {{ redirectInput('departments/success?slug={slug}') }}
            {{ hiddenInput('sectionId', craft.app.entries.getSectionByHandle('departments').id) }}
            {{ hiddenInput('typeId', craft.app.entries.getSectionByHandle('departments').entryTypes[0].id) }}
            {{ hiddenInput('enabled', '1') }}
            {{ hiddenInput('slug', '__temp_' ~ now|date('U')) }}
            {{ successMessageInput('Department has been added successfully!') }}
            
            <div class="field">
                <label for="title">Department Name *</label>
                {{ input('text', 'title', entry.title, {
                    id: 'title',
                    required: true
                }) }}
                {% if entry is defined and entry.hasErrors('title') %}
                    <span class="error">{{ entry.getFirstError('title') }}</span>
                {% endif %}
            </div>
            
            <div class="field">
                <label for="building">Building</label>
                <select id="building" name="fields[building][]">
                    <option value="">Select a Building</option>
                    {% for building in craft.entries()
                        .section('buildings')
                        .orderBy('title asc')
                        .all() %}
                        <option value="{{ building.id }}">{{ building.title }}</option>
                    {% endfor %}
                </select>
            </div>
            
            <div class="submit">
                <button type="submit" class="btn">Add Department</button>
            </div>
        </form>
    </div>
    
    <style>
        .actions-column {
            width: 120px;
            text-align: center;
        }
        
        .btn.small {
            padding: 5px 10px;
            font-size: 0.9em;
        }
        
        select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }
    </style>
{% endblock %}
