{% extends "_layout" %}

{% block content %}
    <div class="header-with-nav">
        <h1>Buildings Management</h1>
        <div class="nav-links">
            <a href="{{ siteUrl('settings') }}" class="btn">‚Üê Back to Settings</a>
        </div>
    </div>

    {# Display existing buildings #}
    <div class="buildings-list">
        <h2>Existing Buildings</h2>
        {% set buildings = craft.entries()
            .section('buildings')
            .orderBy('title asc')
            .all() %}

        {% if buildings|length %}
            <table class="buildings-table">
                <thead>
                    <tr>
                        <th>Building Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for building in buildings %}
                        <tr>
                            <td><a href="{{ building.url }}">{{ building.title }}</a></td>
                            <td class="actions-column">
                                <a href="{{ building.cpEditUrl }}" class="btn small">Edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p><em>No buildings have been added yet.</em></p>
        {% endif %}
    </div>

    {# Form to add new building #}
    <div class="add-building-form">
        <h2>Add New Building</h2>
        
        {% if success is defined %}
            <div class="notification success">
                Building has been saved successfully!
            </div>
        {% endif %}

        {% set entry = entry is defined ? entry : craft.entries.section('buildings').one() ?? create('craft\\elements\\Entry') %}
        
        <form method="post" accept-charset="UTF-8">
            {{ csrfInput() }}
            {{ actionInput('entries/save-entry') }}
            {{ redirectInput('buildings/success?slug={slug}') }}
            {{ hiddenInput('sectionId', craft.app.entries.getSectionByHandle('buildings').id) }}
            {{ hiddenInput('typeId', craft.app.entries.getSectionByHandle('buildings').entryTypes[0].id) }}
            {{ hiddenInput('enabled', '1') }}
            {{ hiddenInput('slug', '__temp_' ~ now|date('U')) }}
            {{ successMessageInput('Building has been added successfully!') }}
            
            <div class="field">
                <label for="title">Building Name *</label>
                {{ input('text', 'title', entry.title, {
                    id: 'title',
                    required: true
                }) }}
                {% if entry is defined and entry.hasErrors('title') %}
                    <span class="error">{{ entry.getFirstError('title') }}</span>
                {% endif %}
            </div>
            
            <div class="submit">
                <button type="submit" class="btn">Add Building</button>
            </div>
        </form>
    </div>
    
    <style>
        .actions-column {
            width: 120px;
            text-align: center;
        }
        
        .btn.small {
            padding: 5px 10px;
            font-size: 0.9em;
        }
    </style>
{% endblock %}
