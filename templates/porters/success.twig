{% extends "_layout" %}

{% block content %}
    {% set slug = craft.app.request.getQueryParam('slug') %}
    {% set entry = slug ? craft.entries()
        .section('porters')
        .slug(slug)
        .one() %}
        
    <div class="success-page">
        <h1>Porter Added Successfully</h1>
        
        <div class="notification success">
            <p>The new porter has been successfully added to the system.</p>
        </div>
        
        <div class="actions">
            <a href="{{ siteUrl('porters') }}" class="btn">Back to Porters List</a>
            {% if entry %}
                <a href="{{ entry.url }}" class="btn">View Porter Details</a>
            {% endif %}
            <a href="{{ siteUrl('staff') }}" class="btn">Staff Management</a>
        </div>
    </div>
    
    <style>
        .success-page {
            text-align: center;
            padding: 30px 0;
        }
        
        .notification {
            max-width: 600px;
            margin: 20px auto;
        }
        
        .actions {
            margin-top: 30px;
        }
        
        .actions .btn {
            margin: 0 10px;
            display: inline-block;
            text-decoration: none;
        }
    </style>
{% endblock %}
